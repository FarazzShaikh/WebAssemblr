{
  "name": "web-assemblr",
  "version": "1.0.0",
  "description": "A dead simple way to use WebAssembly in your script.",
  "main": "index.js",
  "scripts": {
    "start": "npm run compile:tsc && node ./build/test/test.js",
    "compile": "npm run compile:tsc && cp -R ./test/wasm ./build/test",
    "compile:wasm": "emcc --no-entry ./test/c/* ./test/cpp/* -s WASM=1 -s MODULARIZE=1 -s EXPORTED_FUNCTIONS=\"['_malloc', '_free']\" -s EXTRA_EXPORTED_RUNTIME_METHODS=\"['ccall']\" -o ./test/wasm/main.js && cp -R ./test/wasm ./build/test",
    "compile:tsc": "tsc",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FarazzShaikh/WebAssemblr.git"
  },
  "bin": {
    "WebAssemblr": "./build/bin/WebAssemblr.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/FarazzShaikh/WebAssemblr/issues"
  },
  "homepage": "https://github.com/FarazzShaikh/WebAssemblr#readme",
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  }
}
