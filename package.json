{
  "name": "web-assemblr",
  "version": "1.0.0",
  "description": "A dead simple way to use WebAssembly in your script.",
  "main": "lib/src/WebAssemblr.js",
  "types": "lib/src/WebAssemblr.d.ts",
  "scripts": {
    "build": "tsc",
    "build:bin": "tsc && npm i -g .",
    "test": "jest",
    "preversion": "npm test",
    "prepublishOnly": "npm test",
    "prepare": "npm run build",
    "version": "git add .",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FarazzShaikh/WebAssemblr.git"
  },
  "bin": {
    "wasmlr": "./lib/bin/wasmlr.js"
  },
  "files": [
    "lib/*",
    "bin/*"
  ],
  "keywords": [
    "Typescript",
    "Web Assembly",
    "WASM",
    "TS",
    "JavaScript"
  ],
  "author": "Faraz Shaikh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FarazzShaikh/WebAssemblr/issues"
  },
  "homepage": "https://github.com/FarazzShaikh/WebAssemblr#readme",
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/yargs": "^15.0.12",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "yargs": "^16.2.0"
  }
}
